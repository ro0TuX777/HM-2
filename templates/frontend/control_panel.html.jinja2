<div class="bg-white p-4 rounded shadow">
    <h2 class="text-xl font-semibold mb-2">Control Panel</h2>
    <div class="mb-4">
        <label for="deviceSelect" class="block text-sm font-medium text-gray-700">Select Device</label>
        <select id="deviceSelect" class="w-full">
            <!-- Options will be populated dynamically -->
        </select>
    </div>
    <!-- Sliders and Input Fields with Tooltips -->
    <div class="mb-4 tooltip">
        <label for="patchUrgency" class="block text-sm font-medium text-gray-700">Patch Urgency (PU)</label>
        <input type="range" id="patchUrgency" name="patchUrgency" min="0" max="10" step="0.1" class="w-full">
        <span class="tooltiptext">Represents how critical it is to apply patches to devices</span>
    </div>
    <div class="mb-4 tooltip">
        <label for="threatLevel" class="block text-sm font-medium text-gray-700">Threat Level (TL)</label>
        <input type="range" id="threatLevel" name="threatLevel" min="0" max="10" step="0.1" class="w-full">
        <span class="tooltiptext">Indicates the current threat level to the system</span>
    </div>
    <div class="mb-4 tooltip">
        <label for="knownVulnerabilities" class="block text-sm font-medium text-gray-700">Known Vulnerabilities (KV)</label>
        <input type="range" id="knownVulnerabilities" name="knownVulnerabilities" min="0" max="10" step="0.1" class="w-full">
        <span class="tooltiptext">Number of known vulnerabilities affecting the system</span>
    </div>
    <div class="mb-4 tooltip">
        <label for="globalThreatLevel" class="block text-sm font-medium text-gray-700">Global Threat Level (GTL)</label>
        <input type="range" id="globalThreatLevel" name="globalThreatLevel" min="0" max="10" step="0.1" class="w-full">
        <span class="tooltiptext">Global threat level affecting all systems</span>
    </div>
    <div class="mb-4 tooltip">
        <label for="industryThreatLevel" class="block text-sm font-medium text-gray-700">Industry Threat Level (ITL)</label>
        <input type="range" id="industryThreatLevel" name="industryThreatLevel" min="0" max="10" step="0.1" class="w-full">
        <span class="tooltiptext">Threat level specific to the industry</span>
    </div>
    <div class="mb-4 tooltip">
        <label for="userRiskScore" class="block text-sm font-medium text-gray-700">User Risk Score (URS)</label>
        <input type="range" id="userRiskScore" name="userRiskScore" min="0" max="10" step="0.1" class="w-full">
        <span class="tooltiptext">Risk score based on user behavior</span>
    </div>
    <div class="mb-4 tooltip">
        <label for="threatIntelligenceScore" class="block text-sm font-medium text-gray-700">Threat Intelligence Score (TIS)</label>
        <input type="range" id="threatIntelligenceScore" name="threatIntelligenceScore" min="0" max="10" step="0.1" class="w-full">
        <span class="tooltiptext">Score based on threat intelligence data</span>
    </div>
    <div class="mb-4 tooltip">
        <label for="vulnerabilitySeverityScore" class="block text-sm font-medium text-gray-700">Vulnerability Severity Score (VSS)</label>
        <input type="range" id="vulnerabilitySeverityScore" name="vulnerabilitySeverityScore" min="0" max="10" step="0.1" class="w-full">
        <span class="tooltiptext">Severity of vulnerabilities present</span>
    </div>
    <div class="mb-4 tooltip">
        <label for="alertnessScore" class="block text-sm font-medium text-gray-700">Alertness Score (AS)</label>
        <input type="range" id="alertnessScore" name="alertnessScore" min="0" max="10" step="0.1" class="w-full">
        <span class="tooltiptext">Score indicating system alertness</span>
    </div>
    <div class="mb-4 tooltip">
        <label for="honeypotThreatIndicator" class="block text-sm font-medium text-gray-700">Honeypot Threat Indicator (HTI)</label>
        <input type="range" id="honeypotThreatIndicator" name="honeypotThreatIndicator" min="0" max="10" step="0.1" class="w-full">
        <span class="tooltiptext">Indicator of threats detected by honeypots</span>
    </div>
    <div class="mb-4 tooltip">
        <label for="complianceRiskScore" class="block text-sm font-medium text-gray-700">Compliance Risk Score (CRS)</label>
        <input type="range" id="complianceRiskScore" name="complianceRiskScore" min="0" max="10" step="0.1" class="w-full">
        <span class="tooltiptext">Risk score based on compliance status</span>
    </div>
    <div class="mb-4 tooltip">
        <label for="supplyChainRiskFactor" class="block text-sm font-medium text-gray-700">Supply Chain Risk Factor (SCRF)</label>
        <input type="range" id="supplyChainRiskFactor" name="supplyChainRiskFactor" min="0" max="10" step="0.1" class="w-full">
        <span class="tooltiptext">Risk factor related to supply chain vulnerabilities</span>
    </div>
    <button id="applyChanges" class="bg-blue-500 text-white px-4 py-2 rounded">Apply Changes</button>
</div>
{% endblock %}
