<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CIP Control Dashboard</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        .bg-dark-blue { background-color: #1a202c; }
        .hover\:bg-dark-blue-light:hover { background-color: #2d3748; }
        .active { font-weight: bold; text-decoration: underline; }
        #networkCanvas {
            border: 1px solid #ccc;
            background: #f8f9fa;
        }
        .device-node {
            cursor: pointer;
            user-select: none;
        }
        .port {
            width: 10px;
            height: 10px;
            border-radius: 50%;
            background: #666;
            cursor: pointer;
        }
        .connection-panel {
            max-height: 300px;
            overflow-y: auto;
        }
        .metric-badge {
            position: absolute;
            padding: 2px 6px;
            border-radius: 9999px;
            font-size: 0.75rem;
            font-weight: 600;
        }
        .layer-toggle {
            cursor: pointer;
            padding: 4px 8px;
            border-radius: 4px;
            margin-right: 8px;
        }
        .layer-toggle.active {
            background-color: #3b82f6;
            color: white;
        }
    </style>
</head>
<body class="bg-gray-100">
    <nav class="bg-dark-blue text-white fixed w-full z-10 top-0 shadow">
        <div class="container mx-auto flex items-center justify-between p-4">
            <div class="flex items-center">
                <a href="/" class="flex items-center">
                    <img src="{{ url_for('static', filename='CIPlogo.png') }}" alt="Aegis Analytica Logo" class="h-8 mr-2">
                    <span class="font-semibold text-xl">Aegis Analytica</span>
                </a>
            </div>
            <div class="hidden md:flex space-x-4">
                <a href="/" class="hover:underline">Home</a>
                <a href="#" class="hover:underline">Network Devices</a>
                <a href="{{ url_for('cip_control') }}" class="hover:underline active">CIP Controls</a>
                <a href="{{ url_for('help_page') }}" class="hover:underline">Help</a>
                <a href="#" class="hover:underline">Settings</a>
            </div>
            <div class="md:hidden">
                <button id="menu-toggle" class="focus:outline-none">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
                    </svg>
                </button>
            </div>
        </div>
        <div id="mobile-menu" class="hidden md:hidden">
            <a href="/" class="block px-4 py-2 hover:bg-dark-blue-light">Home</a>
            <a href="#" class="block px-4 py-2 hover:bg-dark-blue-light">Network Devices</a>
            <a href="{{ url_for('cip_control') }}" class="block px-4 py-2 hover:bg-dark-blue-light">CIP Controls</a>
            <a href="{{ url_for('help_page') }}" class="block px-4 py-2 hover:bg-dark-blue-light">Help</a>
            <a href="#" class="block px-4 py-2 hover:bg-dark-blue-light">Settings</a>
        </div>
    </nav>
    <div class="container mx-auto p-4 mt-16">
        <h1 class="text-2xl font-bold mb-4">CIP Control Dashboard</h1>
        
        {% include 'frontend/network_visualization.html' %}

        <div class="grid grid-cols-4 gap-4">
            {% include 'frontend/connection_management.html' %}
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            {% include 'frontend/control_panel.html' %}
            {% include 'frontend/visualization.html' %}
        </div>
    </div>
    <script>
        document.getElementById('menu-toggle').addEventListener('click', function() {
            const menu = document.getElementById('mobile-menu');
            menu.classList.toggle('hidden');
        });
    </script>
    <script src="{{ url_for('static', filename='cip_control.js') }}"></script>
</body>
</html>
